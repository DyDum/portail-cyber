{% extends 'base.html.twig' %}

{% block title %}Erreur - Portail Cyber{% endblock %}

{% block body %}
<style>
    body {
        background: radial-gradient(circle at center, #0a0f1f, #000);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .error-card {
        backdrop-filter: blur(8px);
        background: rgba(20, 25, 40, 0.8);
        color: #fff;
        border-radius: 1rem;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.6);
        max-width: 600px;
        width: 90%;
        padding: 3rem 2rem;
        text-align: center;
        animation: fadeIn 0.6s ease-out;
    }

    .error-icon {
        font-size: 4rem;
        color: #ff4444;
        margin-bottom: 1rem;
        animation: pulse 1.5s infinite ease-in-out;
    }

    .error-title {
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #fff;
    }

    .error-message {
        font-size: 1.1rem;
        color: #ccc;
        margin-bottom: 2rem;
    }

    .btn-return {
        border: 1px solid #666;
        color: #ddd;
        background: transparent;
        transition: all 0.3s ease;
    }

    .btn-return:hover {
        background: #ffc107;
        color: #000;
        border-color: #ffc107;
    }

    @keyframes pulse {
        0% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.15); opacity: 0.8; }
        100% { transform: scale(1); opacity: 1; }
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="error-card">
    <div class="error-icon">
        <i class="bi bi-exclamation-triangle-fill"></i>
    </div>
    <div class="error-title">Une erreur est survenue</div>
    <div class="error-message">
        {{ message }}
    </div>

    {% if backUrl is defined and backUrl %}
        <a href="{{ backUrl }}" class="btn btn-return px-4">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
    {% else %}
        <a href="{{ path('dashboard') }}" class="btn btn-return px-4">
            <i class="bi bi-house"></i> Retour au tableau de bord
        </a>
    {% endif %}
</div>
{% endblock %}
