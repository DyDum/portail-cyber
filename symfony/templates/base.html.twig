<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Portail Cyber{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>

<body data-rss-feeds='{{ rssFeeds|json_encode|raw }}'>
    <!-- Top Navigation -->
    <nav class="navbar navbar-dark top-nav">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center">
                <button class="btn btn-link text-white me-3 sidebar-toggle" id="sidebarToggle">
                    <i class="bi bi-list fs-4"></i>
                </button>
                <a class="navbar-brand fw-bold d-flex align-items-center" href="/dashboard">
                    <i class="bi bi-shield-lock-fill me-2"></i>
                    Portail Cyber
                </a>
            </div>
            <div class="d-flex align-items-center">
                <a href="/dashboard" class="nav-link text-white me-2">
                    <i class="bi bi-house-fill me-1"></i> Dashboard
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="/admin" class="nav-link text-white me-2">
                    <i class="bi bi-gear-fill me-1"></i> Admin
                </a>
                {% endif %}
                <a href="/logout" class="nav-link text-white">
                    <i class="bi bi-box-arrow-right me-1"></i> Se déconnecter
                </a>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-content">
            <!-- Catégories Section -->
            <div class="sidebar-section">
                <div class="sidebar-header" data-bs-toggle="collapse" data-bs-target="#outilsMenu" aria-expanded="true">
                    <i class="bi bi-grid-3x3-gap-fill me-2"></i>
                    <span>Outils</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </div>
                <div class="collapse show" id="outilsMenu">
                    <a href="/dashboard" class="sidebar-item {{ app.request.get('outil') is null and app.request.pathinfo == '/dashboard' ? 'active' : '' }}">
                        <i class="bi bi-circle-fill me-2"></i>
                        Tous les outils
                    </a>
                    {% if outils is defined %}
                        {% for outil, links in outils %}
                        <a href="/dashboard?outil={{ outil|url_encode }}" class="sidebar-item {{ app.request.get('outil') is not null and app.request.get('outil') == outil ? 'active' : '' }}">
                            <i class="bi bi-circle me-2"></i>
                            {{ outil }}
                        </a>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            <!-- Favoris Section -->
            <div class="sidebar-section">
                <div class="sidebar-header" data-bs-toggle="collapse" data-bs-target="#favorisMenu" aria-expanded="false">
                    <i class="bi bi-star-fill text-warning me-2"></i>
                    <span>Favoris</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </div>
                <div class="collapse" id="favorisMenu">
                    {% if favorites is defined and favorites|length > 0 %}
                        <a href="/rss/favorites" class="sidebar-item {{ app.request.get('fav') is null and app.request.pathinfo == '/rss/favorites' ? 'active' : '' }}">
                            <i class="bi bi-circle-fill me-2"></i> Tous les favoris
                        </a>                        
                        {% for index in favorites %}
                            {% if rssFeeds[index] is defined %}
                                <a href="/rss/favorites?fav={{ index }}" 
                                class="sidebar-item d-flex justify-content-between align-items-center {{ app.request.get('fav') is not null and app.request.get('fav') == index ? 'active' : '' }}">
                                    <span><i class="bi bi-circle me-2"></i>{{ rssFeeds[index].name }}</span>
                                    <button class="toggle-fav" data-feed-index="{{ index }}"
                                            data-favorite="{{ index in favorites ? 'true' : 'false' }}">
                                        {% if index in favorites %}
                                            <i class="bi bi-star-fill text-warning"></i>
                                        {% else %}
                                            <i class="bi bi-star"></i>
                                        {% endif %}
                                    </button>
                                </a>
                            {% endif %}
                        {% endfor %}
                    {% else %}
                        <div class="sidebar-item">
                            <span class="small fst-italic">Aucun favori</span>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- RSS Section -->
            <div class="sidebar-section">
                <div class="sidebar-header" data-bs-toggle="collapse" data-bs-target="#rssMenu" aria-expanded="false">
                    <i class="bi bi-rss-fill me-2"></i>
                    <span>RSS</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </div>
                <div class="collapse" id="rssMenu">
                    <a href="/rss" class="sidebar-item {{ app.request.get('feed') is null and app.request.pathinfo == '/rss' ? 'active' : '' }}">
                        <i class="bi bi-circle-fill me-2"></i> Tous les flux
                    </a>
                    {% for feed in rssFeeds %}
                        <a href="/rss?feed={{ loop.index0 }}" 
                        class="sidebar-item d-flex justify-content-between align-items-center {{ app.request.get('feed') is not null and app.request.get('feed') == loop.index0 ? 'active' : '' }}">
                            <span><i class="bi bi-circle me-2"></i>{{ feed.name }}</span>
                            <button class="toggle-fav" data-feed-index="{{ loop.index0 }}"
                                    data-favorite="{{ loop.index0 in favorites ? 'true' : 'false' }}">
                                {% if loop.index0 in favorites %}
                                    <i class="bi bi-star-fill text-warning"></i>
                                {% else %}
                                    <i class="bi bi-star"></i>
                                {% endif %}
                            </button>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="toast-container"></div>

    <!-- Main Content -->
    <main class="main-content" id="mainContent">
        {% block body %}{% endblock %}
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/sidebar.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/favorites.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/toast.js') }}"></script>
</body>
</html>