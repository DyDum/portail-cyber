{% extends 'base.html.twig' %}
{% block title %}Dashboard - Portail Cyber{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-2">
                <i class="bi bi-speedometer2 me-3"></i>Outils
            </h1>
            <p class="text-light opacity-75">Accédez rapidement aux outils de cybersécurité</p>
        </div>
    </div>

    {# Barre de filtres des outils #}
    <div class="mb-4">
        <div class="d-flex flex-wrap gap-2 align-items-center">
            <a href="{{ path('dashboard') }}" 
            class="btn btn-sm {{ selectedoutil is null ? 'btn-primary' : 'btn-outline-light' }}">
                <i class="bi bi-grid-3x3-gap me-1"></i> Tous les outils
            </a>

            {% for outilName, links in outils %}
                <div class="rss-filter-item {{ selectedoutil is not null and selectedoutil == outilName ? 'active' : '' }}">
                    <a href="{{ path('dashboard') ~ '?outil=' ~ outilName|url_encode }}" 
                    class="rss-filter-link text-decoration-none">
                        <i class="bi bi-wrench-adjustable-circle me-2"></i>
                        {{ outilName }}
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Cards des outils -->
    <div class="row g-4">
        {% for outil, links in outils_dashboard %}
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-header">
                        <i class="bi bi-folder-fill me-2"></i>
                        {{ outil }}
                    </div>
                    <div class="card-body">
                        {% for link in links %}
                            <a href="{{ link.url }}" target="_blank" class="btn btn-outline-primary w-100 mb-2">
                                <i class="bi bi-box-arrow-up-right me-2"></i>
                                {{ link.name }}
                            </a>
                        {% else %}
                            <p class="text-muted text-center mb-0">Aucun lien disponible</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Aucune catégorie disponible. Ajoutez-en via la page d'administration.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}