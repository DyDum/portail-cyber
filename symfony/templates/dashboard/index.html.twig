{% extends 'base.html.twig' %}
{% block title %}Dashboard - Portail Cyber{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-2">
                <i class="bi bi-speedometer2 me-3"></i>Outils
            </h1>
            <p class="text-light opacity-75">Accédez rapidement aux outils de cybersécurité</p>
        </div>
    </div>

    <div class="mb-3">
        <a href="{{ path('dashboard') }}" 
           class="btn btn-outline-secondary {% if selectedCategory is null %}active{% endif %}">
           Toutes
        </a>
        {% for categoryName, links in categories %}
            <a href="{{ path('dashboard') ~ '?category=' ~ categoryName|url_encode }}"
               class="btn btn-outline-secondary {% if selectedCategory and selectedCategory == categoryName %}active{% endif %}">
               {{ categoryName }}
            </a>
        {% endfor %}
    </div>

    <!-- Cards des catégories -->
    <div class="row g-4">
        {% for category, links in categories_dashboard %}
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-header">
                        <i class="bi bi-folder-fill me-2"></i>
                        {{ category }}
                    </div>
                    <div class="card-body">
                        {% for link in links %}
                            <a href="{{ link.url }}" target="_blank" class="btn btn-outline-primary w-100 mb-2">
                                <i class="bi bi-box-arrow-up-right me-2"></i>
                                {{ link.name }}
                            </a>
                        {% else %}
                            <p class="text-muted text-center mb-0">Aucun lien disponible</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Aucune catégorie disponible. Ajoutez-en via la page d'administration.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}